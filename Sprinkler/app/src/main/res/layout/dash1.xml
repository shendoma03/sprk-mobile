<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apc.edu.ph.sprnklr3.Dashboard"
    android:clipToPadding="false"
   >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout5"

        android:background="#fff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/ref"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:id="@+id/r1"
            android:background="#4f52ba"
            android:shadowColor="#080808"
            android:shadowRadius="20"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/whitesoil"
                android:shadowColor="#080808"
                android:shadowRadius="10"
                android:shadowDx="5"
                android:shadowDy="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Soil Moisture Level:"
                android:id="@+id/textView"
                android:textColor="#fff"
                android:textSize="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView2"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/soil"
                android:layout_below="@+id/textView"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView2"
                android:textAlignment="center"
                android:textColor="#fff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:id="@+id/relativeLayout2"
            android:background="#585858"
            android:shadowColor="#080808"
            android:shadowRadius="10"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/r1"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/water"
                android:layout_margin="2dp"
                android:shadowColor="#080808"
                android:shadowRadius="10"
                android:shadowDx="5"
                android:shadowDy="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Water Level:"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView3"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="23dp"
                android:padding="2dp"
                android:textColor="#fff"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/waterLevel"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textView2"
                android:textColor="#fff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:id="@+id/relativeLayout3"
            android:background="#e94e02"
            android:shadowColor="#080808"
            android:shadowRadius="10"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/temperature"
                android:layout_margin="2dp"
                android:shadowColor="#080808"
                android:shadowRadius="10"
                android:shadowDx="5"
                android:shadowDy="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temperature: "
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView4"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="30"
                android:id="@+id/temp"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Â°C"
                android:id="@+id/textView8"
                android:layout_alignBottom="@+id/temp"
                android:layout_toEndOf="@+id/temp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="30dp"
        android:id="@+id/relativeLayout6"
        android:layout_below="@+id/relativeLayout5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:id="@+id/relativeLayout4"
            android:background="#66b668"
            android:shadowColor="#080808"
            android:shadowRadius="10"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="REMOTE"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@+id/imageButton"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/remote"
                android:background="@null"
                android:onClick="Remote"
                android:padding="2dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SPRINKLING"
                android:id="@+id/tvOn"
                android:textStyle="bold"
                android:textColor="#cbffa4"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="OFF"
                android:id="@+id/tvOff"
                android:textStyle="bold"
                android:textColor="#fe030b"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF / ON"
                android:id="@+id/remoteButton"
                android:checked="false"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/ref"

        android:layout_marginLeft="50dp"
        android:elevation="20dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last update:"
        android:id="@+id/textView4"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/relativeLayout5"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/date"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="31dp"
        android:textColor="@color/black"
        android:layout_alignEnd="@+id/textView4" />

</RelativeLayout>
