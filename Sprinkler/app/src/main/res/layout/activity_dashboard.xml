<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rhendel03.sprinkler.Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/date_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Update"
            android:id="@+id/dateText"

            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_below="@+id/dateText"
            android:id="@+id/date"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_container"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/Soil_Container"
        android:background="@color/windowBackground"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soilPIC"
            android:src="@drawable/soilpic"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Soil Moisture"
            android:layout_below="@+id/soilPIC"
            android:id="@+id/tvsoil"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_below="@+id/tvsoil"
            android:id="@+id/soil"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Soil_Container"
        android:layout_alignParentEnd="true"
        android:id="@+id/WaterLevel_Container"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waterPIC"
            android:src="@drawable/waterpic"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Water Level"
            android:layout_below="@+id/waterPIC"
            android:id="@+id/tvwater"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textColor="@color/black"
            android:layout_below="@+id/tvwater"
            android:id="@+id/waterLevel"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Soil_Container"
        android:layout_centerHorizontal="true"
        android:id="@+id/temperature_container"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TEMPERATURE"
            android:id="@+id/tvtemp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="30"
            android:id="@+id/temp"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_below="@+id/tvtemp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Â°C"
            android:id="@+id/cel"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_below="@+id/tvtemp"
            android:layout_toEndOf="@+id/temp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sprinklerImg"
        android:layout_alignEnd="@+id/temperature_container"
        android:layout_below="@+id/temperature_container" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sprinklerImg"
        android:layout_toStartOf="@+id/sprinklerImg"
        android:layout_marginTop="29dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Remote Sprinkler"
            android:id="@+id/tvremote"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvremote"
            android:text="New ToggleButton"
            android:id="@+id/remoteButton"
            android:layout_centerHorizontal="true"
            android:checked="false" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/ref"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Soil_Container" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:id="@+id/button"
        android:layout_alignTop="@+id/ref"
        android:layout_toStartOf="@+id/sprinklerImg" />

</RelativeLayout>
